        <br>
        <br>
      </div>
      <div class="row">
        <div class="col-md-12">
        <form method="POST" action="/updatebook/add/<%=book._id%>" id="myforms1" enctype="multipart/form-data" onsubmit="return validate();">
          <div class="form-row">
            <div class="form-group col-md-8">
              <h1><%=title%></h1>
              </div>
            </div>
            <div class="row">
            <div class="col-md-6">
              <div class="form-row">
                <div class="form-group col-lg-8">
                  <div class="input-group">
                  <input type="hidden" name="id" value="<%=book._id%>">
                  </div>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-lg-8">
                  <div class="input-group" id="one">
                   <h3>Book</h3> 
                  <input type="text" class="form-control" name="title" id="book" placeholder="Book name" style="margin-left: 12%;" value="<%=book.title%>" onkeyup="return validate();">
                </div>
                  <label for="error1" id="error1"></label>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-lg-8">   
                  <div class="input-group" id="two">
                    <h3>Author </h3> 
                  <input type="text" class="form-control" name="author" id="author" placeholder="Author name" style="margin-left: 6%;" value="<%=book.author%>" onkeyup="return validate();">
                </div>
                  <label for="error2" id="error2"></label>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-8">
                  <div class="input-group" id="three">
                   <h3>Genre</h3>
                  <input type="text" class="form-control" name="genre" id="genre1" value='<%=book.genre%>' onkeyup="return validate();">
                  </div>
                  <label for="error3" id="error3"></label>
                </div>
              </div>
              
              <div class="form-row">
                <div class="form-group col-lg-8">
                  <div class="input-group" id="four">
                   <h3>Synopsis</h3>
                  <textarea class="form-control" id="synopsis" name="synopsis" rows="5" cols="33" onkeyup="return validate();"><%=book.synopsis%></textarea>
                  </div>
                  <label for="error4" id="error4"></label>
                </div>
              </div>
            </div>
              <div class="col-md-6">
               
    <div class="form-row">
        <div class="form-group col-lg-8">
          <div class="input-group" id="five">
           <h3>Image</h3>
          <input type="file" id="image1" name="image" onchange="showFiles();" accept="image/*" value="<%=book.image%>">
          <img id="preview" style="width: 180px; height: 200px; margin-top: 5%;">
          </div>
          <label for="error5" id="error5"></label>
        </div>
      </div>
    </div>
  </div>
                <div class="form-row">   
                  <div class="form-group col-lg-8">
                <button type="submit" class="btn btn-primary" id="myButton"  onclick="return validate();">Update</button>
              </div>
              </div>
              
                </form>
</div>
</div>
